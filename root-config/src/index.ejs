<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Root Config</title>
  <meta name="importmap-type" content="systemjs-importmap" />
  <% if (isLocal) { %>
  <script type="systemjs-importmap">
    {
      "imports": {
        "react": "https://cdn.jsdelivr.net/npm/react@16.12.0/umd/react.production.min.js",
        "react-dom": "https://cdn.jsdelivr.net/npm/react-dom@16.12.0/umd/react-dom.production.min.js",
        "single-spa": "https://cdn.jsdelivr.net/npm/single-spa@5.1.0/lib/system/single-spa.min.js",
        "@foreman/root-config": "https://localhost:9000/foreman-root-config.js",
        "@foreman/chroming": "http://localhost:9001/foreman-chroming.js",
        "@foreman/core": "http://localhost:9002/foreman-core.js",
        "@foreman/katello": "http://localhost:9003/foreman-katello.js"
      }
    }
  </script>
  <% } %>
  <script src="https://cdn.jsdelivr.net/npm/import-map-overrides/dist/import-map-overrides.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/systemjs/dist/system.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/systemjs/dist/extras/amd.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/systemjs/dist/extras/named-exports.min.js"></script>
  <style>
    html, body {
      padding-top: 5px;
      height: 90%;
    }

    #container {
      display: "inline-block";
      height: 100%;
    }

    #foreman-chroming {
      width: 200px;
      height: 100%;
      float: left;
    }

    #main-content {
      position:relative;
      width: 300px;
    }
  </style>
</head>
<body>
  <script>
    System.import('@foreman/root-config');
  </script>
  <div id="container">
    <div id="foreman-chroming"></div>
    <div id="foreman-main-content"></div>
  </div>
  <import-map-overrides-full show-when-local-storage="devtools" dev-libs></import-map-overrides-full>
</body>
</html>
